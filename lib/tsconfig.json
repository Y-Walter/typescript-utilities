{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ES5",                                 
    "module": "ESNext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "eslint-plugin-import-access"
      }
    ],
    "paths": {
      "/@*": [
        "./*"
      ]
    }
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules"]
}
